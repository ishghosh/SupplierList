<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" busyIndicatorDelay="0"
	controllerName="com.supplier.SupplierList.controller.SupplierDetailView" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="employeePage" title="{i18n>ProductDetailsOf} {ID}" showNavButton="true" navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel id="employeePanel" width="auto" class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="{Name}" level="H2"/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1"
						columnsM="1">
						<f:content>
							<Label text="{i18n>formSupplierName}"/>
							<Link text="{Name}" press="onOpenLinkPressF4"/>
							<Label text="{i18n>formState}"/>
							<Text text="{Address/State}"/>
							<Label text="{i18n>formCity}"/>
							<Text text="{Address/City} "/>
							<Label text="{i18n>formPostalCode}"/>
							<Text text="{Address/Street} {Address/ZipCode}"/>
							<Label text="{i18n>formCountry}"/>
							<Text text="{Address/Country}"/>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>